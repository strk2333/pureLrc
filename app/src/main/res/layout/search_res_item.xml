<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_res_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    style="?android:attr/buttonBarStyle"
    android:orientation="horizontal">

    <Button
        android:id="@+id/search_res_item_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        style="?android:attr/buttonBarButtonStyle"
        android:background="@drawable/btn_border_solid2"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/search_res_item_favorite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/btn_border_solid"
        android:text="@string/search_favorite"
        style="?android:attr/buttonBarButtonStyle"/>
</LinearLayout>